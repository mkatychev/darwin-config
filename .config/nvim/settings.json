{
  "rust": {
    "clippy_preference": "on"
  },
  "rust-analyzer": {
    "trace": {
      "server": "verbose"
    },
    "rustfmtArgs": [
      "+nightly"
    ]
  },
  "gopls": {
    "usePlaceholders": true,
    "completeUnimported": true
  },
  "http": {
    "proxyStrictSSL": true
  },
  "pyls": {
    "configurationSources": [
      "flake8"
    ],
    "plugins": {
      "autopep8": {
        "enabled": false
      },
      "pycodestyle": {
        "enabled": false
      },
      "pydocstyle": {
        "enabled": false
      },
      "pylint": {
        "enabled": false
      },
      "pyflakes": {
        "enabled": true
      },
      "yapf": {
        "enabled": false
      }
    }
  },
  "yaml": {
    "completion": true,
    "format": {
      "enable": true
    },
    "hover": true,
    "schemas": {
      "Kubernetes": "/*"
    },
    "validate": true
  }
}
